<div class="row">
  <div class="col s2 m2 offset-s1 offset-m5">
    <h3 class="signup-title text-center">Archive</h3>
  </div>
</div>

<div class="row">
  <div class="col s10 m4 offset-s1 offset-m4">
    <div class="card">
      <div class="card-content blue-grey-text">
        <span class="col s12 m12 card-title"><b>Sign Up</b></span>
        <form class="col s12 m12" {{action "signup" on="submit"}}>
          <div class="row signup-row-field">
            <div class="input-field col s12 m12">
              {{input id="full_name" type="text" class="validate" value=model.fullName}}
              <label for="full_name">Full Name</label>
              <div class="error-div">
                <span class="validation_error {{hide}}">{{errors.model.fullName.[0]}}</span>
              </div>
            </div>
          </div>
          <div class="row signup-row-field">
            <div class="input-field col s12 m12">
              {{input id="email" type="text" class="validate" value=model.email}}
              <label for="email">Email</label>
              <div class="error-div">
                <span class="validation_error {{hide}}">{{errors.model.email.[0]}}</span>
              </div>
              
            </div>
          </div>
          <div class="row signup-row-field">
            <div class="input-field col s12 m12">
              {{input id="password" type="password" class="validate" value=model.password}}
              <label for="password">Password</label>
              <div class="error-div">
                <span class="validation_error  {{hide}}">{{errors.model.password.[0]}}</span>
              </div>
            </div>
          </div>
          <div class="row signup-row-field">
            <div class="input-field col s12 m12">
              {{input id="confirm_password" type="password" class="validate" value=model.passwordConfirmation}}
              <label for="confirm_password">Confirm Password</label>
              <div class="error-div">
                <span class="validation_error {{hide}}">{{errors.model.passwordConfirmation.[0]}}</span>
              </div>
            </div>
          </div>
          <div class="card-content check">
            <button class="waves-effect waves-light btn green" type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{outlet}}
